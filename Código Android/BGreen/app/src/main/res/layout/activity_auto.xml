<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.andro id.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/branco"
    tools:context=".auto">



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_navigation"
        app:itemBackground="@color/verdeEscuro"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        app:menu="@menu/menu_navigation"
        android:layout_alignParentBottom="true"
        />


    <ImageButton
        android:id="@+id/Automatico"
        android:layout_width="97dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="154dp"
        android:layout_marginTop="18dp"
        android:backgroundTint="@color/branco"
        app:srcCompat="@mipmap/autooff_foreground" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="128dp"
        android:background="@color/laranjaClaro">


        <ImageButton
            android:id="@+id/horasVentilacaoDiaMais"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="300dp"
            android:layout_marginTop="90dp"
            android:background="@color/laranjaClaro"
            app:srcCompat="@drawable/ic_baseline_add_24" />

        <TextView
            android:id="@+id/horasVentilacaoDia"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="220dp"
            android:layout_marginTop="90dp"
            android:background="@color/verdeEscuro"
            android:text="4"
            android:textAlignment="center"
            android:textColor="@color/branco"
            android:textSize="50sp" />

        <ImageButton
            android:id="@+id/horasVentilacaoDiaMenos"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="150dp"
            android:layout_marginTop="90dp"
            android:background="@color/laranjaClaro"
            app:srcCompat="@drawable/ic_baseline_remove_24" />

        <TextView
            android:id="@+id/labelHorasVentilacao"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:layout_marginTop="30dp"
            android:text="Ventilação"
            android:textAlignment="center"
            android:textColor="@color/preto"
            android:textSize="30dp" />

        <ImageView
            android:id="@+id/fanIcon"
            android:layout_width="188dp"
            android:layout_height="match_parent"
            app:srcCompat="@mipmap/fanicon_foreground" />


    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="318dp"
        android:background="@color/azulClaro">

        <ImageButton
            android:id="@+id/regasDiaMais"
            android:layout_width="71dp"
            android:layout_height="66dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="300dp"
            android:layout_marginTop="90dp"
            android:background="@color/azulClaro"
            app:srcCompat="@drawable/ic_baseline_add_24" />

        <TextView
            android:id="@+id/regasDia"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="220dp"
            android:layout_marginTop="90dp"
            android:background="@color/verdeEscuro"
            android:text="4"
            android:textAlignment="center"
            android:textColor="@color/branco"
            android:textSize="50sp" />

        <ImageButton
            android:id="@+id/regasDiaMenos"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="150dp"
            android:layout_marginTop="90dp"
            android:background="@color/azulClaro"
            app:srcCompat="@drawable/ic_baseline_remove_24" />

        <TextView
            android:id="@+id/labelRegas"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:layout_marginTop="30dp"
            android:text="Regas"
            android:textAlignment="center"
            android:textColor="@color/preto"
            android:textSize="30dp" />

        <ImageView
            android:id="@+id/tapIcon"
            android:layout_width="188dp"
            android:layout_height="match_parent"
            app:srcCompat="@mipmap/tapicon2_foreground" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="508dp"
        android:layout_marginBottom="33dp"
        android:background="@color/amareloClaro">


        <ImageButton
            android:id="@+id/horasLuzDiaMais"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="300dp"
            android:layout_marginTop="90dp"
            android:background="@color/amareloClaro"
            app:srcCompat="@drawable/ic_baseline_add_24" />

        <ImageButton
            android:id="@+id/horasLuzDiaMenos"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="150dp"
            android:layout_marginTop="90dp"
            android:background="@color/amareloClaro"
            app:srcCompat="@drawable/ic_baseline_remove_24" />

        <TextView
            android:id="@+id/horasLuzDia"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="220dp"
            android:layout_marginTop="90dp"
            android:background="@color/verdeEscuro"
            android:text="4"
            android:textAlignment="center"
            android:textColor="@color/branco"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/labelHorasLuz"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:layout_marginTop="30dp"
            android:text="Luz"
            android:textAlignment="center"
            android:textColor="@color/preto"
            android:textSize="30dp" />

        <ImageView
            android:id="@+id/bulbIcon"
            android:layout_width="188dp"
            android:layout_height="match_parent"
            app:srcCompat="@mipmap/bulbicon_foreground" />

    </FrameLayout>
</RelativeLayout>